<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs') %>
    <title>Log-In | Marcel The Outdoor Cat</title>
</head>
<body>
    <header>
    </header>
    <main>
        <section class="login-container">
            <div class="login-logo-container">
                <a href="/"><img src="assets/cat_logo.png" alt="cat logo"></a>
            </div>
            <div class="login-panel">
                <h1>Log in to Marcel</h1>
                <form action="/login" method="POST">
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input name="username" placeholder="Username" type="text" id="username" required autofocus>   
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input name="password" placeholder="Password" type="password" id="password" required>
                    </div>
                    <button>Log In</button>
                </form>
                <p>New to Marcel? <a href="/signup" class="">Sign up</a></p>
            </div>
        </section>
    </main>

    <footer>
        <%- include('partials/footer.ejs') %>
    </footer>
</body>
</html>