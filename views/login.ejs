  <%- include('partials/head.ejs') %>
  <title>Log-In | Marcel The Outdoor Cat</title>
</head>
<body>
  <header>
  </header>
  <main id="login-page">
    <div class="login-container">
      <section class="login-logo-container">
        <a href="/"><img src="assets/cat_logo-157x200.png" alt="cat logo"></a>
      </section>
      <section class="form-panel">
        <h1>Log in to Marcel</h1>
        <% if (locals.messages.errors) { %> 
          <% messages.errors.forEach( el => { %>
            <p class="alert alert-danger"><%= el.msg %></p>
          <% }) %>
        <% } %> 
        <% if (locals.messages.info) { %> 
          <% messages.info.forEach( el => { %>
            <p class="alert alert-info"><%= el.msg %></p>
          <% }) %> 
        <% } %>
        <form action="/login" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input name="email" placeholder="Email" type="text" id="email" aria-describedby="emailHelp" required autofocus>   
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input name="password" placeholder="Password" type="password" id="password" required>
          </div>
          <button type="submit">Log In</button>
        </form>
        <p>New to Marcel? <a href="/signup" class="">Sign up</a></p>
      </section>
    </div>
  </main>

  <footer>
    <%- include('partials/footer-copyright.ejs') %>